    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds comment to relevant article_id",
    "queries": ["article_id"],
    "exampleResponse": {
      "postedComment": 
        {
          "comment_id": 19,
          "body": "This is a great aritcle name",
